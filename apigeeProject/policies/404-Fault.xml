<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault continueOnError="false" enabled="true" name="404-Fault">
    <DisplayName>404 Fault</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="application/json">
                {
                "message" : "The URL {request.path} and method {request.verb} you are looking for is not found"
                }
            </Payload>
            <StatusCode>404</StatusCode>
            <ReasonPhrase>This operation is not available</ReasonPhrase>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>